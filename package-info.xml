<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<name>Post and PM Inline Attachments</name>
	<id>Dougiefresh:ILA</id>
	<type>modification</type>
	<version>3.8</version>

	<install for="2.0 - 2.0.99">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<modification>install_20x.xml</modification>
		<require-file name="InlineAttachments.english.php" destination="$boarddir/Themes/default/languages" />
		<require-file name="Subs-InlineAttachments.php" destination="$sourcedir" />
		<redirect timeout="5000" url="?action=admin;area=modsettings;sa=ila" />
	</install>
	<uninstall for="2.0 - 2.0.99">
		<code>add_remove_hooks.php</code>
		<modification reverse="true">install_20x.xml</modification>
		<remove-file name="$boarddir/Themes/default/languages/InlineAttachments.english.php" />
		<remove-file name="$sourcedir/Subs-InlineAttachments.php" />
	</uninstall>

	<install for="2.1 Beta 1">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<modification>install_21x.xml</modification>
		<require-file name="InlineAttachments.english.php" destination="$boarddir/Themes/default/languages" />
		<require-file name="Subs-InlineAttachments.php" destination="$sourcedir" />
		<redirect timeout="5000" url="?action=admin;area=modsettings;sa=ila" />
	</install>
	<uninstall for="2.1 Beta 1">
		<code>add_remove_hooks.php</code>
		<modification reverse="true">install_21x.xml</modification>
		<remove-file name="$boarddir/Themes/default/languages/InlineAttachments.english.php" />
		<remove-file name="$sourcedir/Subs-InlineAttachments.php" />
	</uninstall>
</package-info>